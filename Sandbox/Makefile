ALL_CXXFLAGS += $(CXXFLAGS) $(ALL_CPPFLAGS) -m64 -O2 -std=c++20
LIBS += ../bin/Release-linux-x86_64/NutLib/libNutLib.a
LDDEPS += ../bin/Release-linux-x86_64/NutLib/libNutLib.a
